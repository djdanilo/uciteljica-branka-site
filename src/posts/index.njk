---
layout: layout.njk
title: "Материјали"
pagination:
  data: collections.posts
  size: 6
  reverse: true
permalink: "/posts/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% else %}{% endif %}"
---

<h2>Материјали</h2>

<div class="cards">
{% for post in pagination.items %}
<article class="card">
  {% if post.data.featured_image %}
  <img src="{{ post.data.featured_image }}" alt="{{ post.data.title }}">
  {% endif %}

  <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  <p>{{ post.date | formatDate }}</p>
  <p>{{ post.data.category }}</p>
</article>
{% endfor %}
</div>

<div class="pagination">
{% if pagination.href.previous %}
<a href="{{ pagination.href.previous }}">← Prethodna</a>
{% endif %}

{% if pagination.href.next %}
<a href="{{ pagination.href.next }}">Sledeća →</a>
{% endif %}
</div>