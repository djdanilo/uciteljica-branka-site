---
layout: layout.njk
pagination:
  data: collections.categories
  size: 1
  alias: categoryPosts
permalink: "/posts/{{ pagination.items[0][0] | lower | replace(' ', '-') }}/"
---

{% set categoryName = pagination.items[0][0] %}
{% set posts = pagination.items[0][1] %}

<h2>{{ categoryName }}</h2>

<div class="cards">
{% for post in posts %}
<article class="card">
  {% if post.data.featured_image %}
  <img src="{{ post.data.featured_image }}" alt="{{ post.data.title }}">
  {% endif %}

  <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  <p>{{ post.date | formatDate }}</p>
</article>
{% endfor %}
</div>