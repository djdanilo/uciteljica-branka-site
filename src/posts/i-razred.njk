{% set category = "i-razred" %}

<h2>I razred</h2>

<div class="cards">
{% for post in collections.posts %}
  {% if post.data.category == category %}
    <article class="card">
  {% if post.data.featured_image %}
  <img src="{{ post.data.featured_image }}" alt="{{ post.data.title }}">
  {% endif %}

  <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  <p>{{ post.date | formatDate }}</p>
  <p>{{ post.data.category }}</p>
</article>
  {% endif %}
{% endfor %}
</div>